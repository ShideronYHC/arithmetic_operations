<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceB">

    <TextView
        android:id="@+id/FirstNumber"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="19dp"
        android:text="First #:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Instructions" />

    <TextView
        android:id="@+id/DivisionField"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="110dp"
        android:text="Divide"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubtractionField" />

    <TextView
        android:id="@+id/MultiplicationField"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="110dp"
        android:text="Multiply"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SummationField" />

    <TextView
        android:id="@+id/SummationField"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="Sum"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalculateButton" />

    <TextView
        android:id="@+id/SubtractionField"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:text="Subtract"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalculateButton" />

    <TextView
        android:id="@+id/Instructions"
        android:layout_width="308dp"
        android:layout_height="108dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="52dp"
        android:text="Enter two numbers to perform the arithmetic operations"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/FirstNumberInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SecondNumber"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="29dp"
        android:text="Second #:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstNumber" />

    <Button
        android:id="@+id/CalculateButton"
        android:layout_width="147dp"
        android:layout_height="65dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="132dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SecondNumberInput" />

    <EditText
        android:id="@+id/FirstNumberInput"
        android:layout_width="218dp"
        android:layout_height="52dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Instructions" />

    <EditText
        android:id="@+id/SecondNumberInput"
        android:layout_width="218dp"
        android:layout_height="52dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstNumberInput" />

</androidx.constraintlayout.widget.ConstraintLayout>